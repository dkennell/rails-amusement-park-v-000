<%= @attraction.name %><br>

<% u = User.find_by(id: session[:user_id]) %>
<% if u.admin? %>
  <%= link_to "Edit Attraction", "/attractions/#{@attraction.id}/edit" %>
<% else %>
  <form action="/rides" method="post">
    <input type="hidden" name="attraction_id" value="<%= @attraction.id %>">
    <input type="submit" value="Go on this ride">
  </form>
<% end %>
